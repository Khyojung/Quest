<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/button_view_exit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/pre_color" />

        <TextView
            android:id="@+id/text_view_quest_header"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:fontFamily="@font/work"
            android:paddingTop="5dp"
            android:text="퀘스트 정보"
            android:textColor="@color/simple"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/star"
            app:layout_constraintEnd_toEndOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="15"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button_viewArea"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"

                    android:background="@drawable/round_tool" />
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/gps"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>


            </FrameLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/constraint1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/constraint2"
                    app:layout_constraintTop_toTopOf="parent">
                    <LinearLayout
                        android:paddingLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toTopOf="@+id/imageView8"
                        app:layout_constraintStart_toStartOf="@+id/imageView8" >
                        <TextView
                            android:id="@+id/text_view_title_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/work"
                            android:text="퀘스트 :"
/>

                        <TextView
                            android:paddingLeft="10dp"
                            android:id="@+id/text_view_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:fontFamily="@font/work"
                            android:hint="의뢰 제목" />
                    </LinearLayout>


                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="@drawable/gray_underbar"
                        android:textSize="10dp"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/constraint2"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/constraint3">
                    <LinearLayout
                        android:paddingLeft="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toTopOf="@+id/imageView3"
                        app:layout_constraintStart_toStartOf="@+id/imageView3">
                        <TextView
                            android:id="@+id/text_view_area_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="위치 :"
                            android:fontFamily="@font/work"
/>
                        <TextView
                            android:paddingLeft="10dp"
                            android:id="@+id/text_view_area"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#00000000"
                            android:text="충남대학교"
                            android:ems="10"
                            android:fontFamily="@font/work" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="@drawable/gray_underbar"
                        android:textSize="10dp"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/constraint3"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <LinearLayout
                        android:paddingLeft="20dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toTopOf="@+id/imageView2"
                        app:layout_constraintStart_toStartOf="parent" >
                        <TextView
                            android:id="@+id/text_view_reward_header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/work"
                            android:hint="사례금 :"/>
                        <TextView
                            android:paddingLeft="10dp"
                            android:id="@+id/text_view_reward"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:ems="10"
                            android:fontFamily="@font/work"
                            android:hint="X 원" />
                    </LinearLayout>


                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:background="@drawable/gray_underbar"
                        android:textSize="10dp"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </android.support.constraint.ConstraintLayout>


            </android.support.constraint.ConstraintLayout>


        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            >

            <TextView
                android:fontFamily="@font/work"
                android:id="@+id/text_view_comment_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="5dp"
                android:text="의뢰 내용" />

            <TextView
                android:background="@drawable/rac_gray_round"
                android:id="@+id/text_view_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="top"
                android:padding="50dp"
                android:fontFamily="@font/work"
                android:hint="의뢰의 상세 내용입니다."
                android:inputType="textMultiLine" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:background="@drawable/red_tool"
                android:id="@+id/button_destroyQuest"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:fontFamily="@font/work"
                android:text="거래 파기" />

            <Button
                android:background="@drawable/red_tool"
                android:id="@+id/button_completeQuest"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:fontFamily="@font/work"
                android:text="거래 완료" />

            <Button
                android:background="@drawable/red_tool"
                android:id="@+id/button_chatRoom"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:fontFamily="@font/work"
                android:text="채팅" />

            <Button
                android:background="@drawable/red_tool"
                android:id="@+id/button_cancel_request"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:fontFamily="@font/work"
                android:text="요청 취소" />

        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/button_accept"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1.5"
        android:background="@color/colorAccent"
        android:fontFamily="@font/work"
        android:text="A C C E P T"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold" />
</LinearLayout>