<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hyojung.quest">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    
    <application
        android:name=".GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.LoginActivity"
            android:noHistory="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activity.MainActivity"
            android:label="MainActivity">
        </activity>

        <activity
            android:name=".Activity.AddQuest"
            android:label="AddQuest">
        </activity>

        <activity
            android:name=".Activity.ViewQuest"
            android:label="ViewQuest">
        </activity>

        <activity
            android:name=".Activity.ModifyUserInfo"
            android:label="ModifyUserInfo">
        </activity>

        <activity
            android:name=".Activity.CheckKakaoPay"
            android:label="CheckKakaoPay">
        </activity>

        <activity
            android:name=".Activity.PayProcess"
            android:label="PayProcess">
        </activity>

        <activity
            android:name=".Activity.ChatRoom"
            android:label="ChatRoom">
        </activity>

        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_app_key" />
    </application>


</manifest>